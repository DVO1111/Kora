# Environment variables for Kora Rent-Reclaim Bot

# Solana RPC Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_COMMITMENT=confirmed

# Kora Operator Configuration
OPERATOR_KEYPAIR_PATH=./keys/operator-keypair.json
OPERATOR_TREASURY_ADDRESS=<YOUR_OPERATOR_TREASURY_WALLET>
OPERATOR_NAME=My Kora Operator

# Bot Configuration
CONFIG_PATH=./config.json
MONITOR_INTERVAL_MINUTES=5
DRY_RUN=false
LOG_LEVEL=info
LOGS_DIR=./logs

# Optional: Telegram Bot for Alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Optional: Database for tracking
DATABASE_URL=sqlite:./bot.db
